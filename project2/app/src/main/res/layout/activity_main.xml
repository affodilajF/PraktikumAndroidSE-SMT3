<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="@color/black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:id="@+id/txt_title_calculator"
        android:textAlignment="center"
        android:textSize="45sp"
        android:paddingBottom="40dp"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_calculator"
        android:textSize="50dp"
        android:text=""
        android:textColor="@color/white"
        android:layout_below="@id/txt_title_calculator"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/txt_calculator2"
        android:textSize="70dp"
        android:text=""
        android:textColor="@color/white"
        android:layout_below="@id/txt_calculator"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/line2"
        android:id="@+id/line1"
        >

        <Button
            android:id="@+id/button_c"
            android:text="C"
            android:onClick="onButtonClearClick"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle2"
            style="@style/ButtonStyle"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/button_modulo"
            android:text="%"
            android:onClick="onButtonOperationClick"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle2"
            style="@style/ButtonStyle"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/button_divide"
            android:text="/"
            android:onClick="onButtonOperationClick"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle2"
            style="@style/ButtonStyle"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/button_dell"
            android:text="DEL"
            android:onClick="onButtonDeleteClick"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle2"
            style="@style/ButtonStyle"
            android:layout_margin="10dp"
            />

    </LinearLayout>

<!--    LINE KEDUA -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/line3"
        android:id="@+id/line2"
        >
    <Button
        android:id="@+id/button_7"
        android:text="7"
        android:onClick="onButtonNumberClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/button_8"
        android:text="8"
        android:onClick="onButtonNumberClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/button_9"
        android:text="9"
        android:onClick="onButtonNumberClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/button_multipe"
        android:text="*"
        android:onClick="onButtonOperationClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle2"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/line4"
        android:id="@+id/line3"
        >
    <Button
        android:id="@+id/button_4"
        android:text="4"
        android:onClick="onButtonNumberClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/button_5"
        android:text="5"
        android:onClick="onButtonNumberClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/button_6"
        android:text="6"
        android:onClick="onButtonNumberClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/button_minus"
        android:text="-"
        android:onClick="onButtonOperationClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle2"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/line5"
        android:id="@+id/line4"
        android:layout_weight="1"
        >
    <Button
        android:id="@+id/button_1"
        android:text="1"
        android:onClick="onButtonNumberClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"

        />
    <Button
        android:id="@+id/button_2"
        android:text="2"
        android:onClick="onButtonNumberClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"

        />
    <Button
        android:id="@+id/button_3"
        android:text="3"
        android:onClick="onButtonNumberClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/button_add"
        android:text="+"
        android:onClick="onButtonOperationClick"
        android:layout_weight="1"
        android:background="@drawable/buttonstyle2"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line5"
        android:layout_alignParentBottom="true">

    <Button
        android:id="@+id/button_0"
        android:text="0"
        android:onClick="onButtonNumberClick"
        android:background="@drawable/buttonstyle"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        android:layout_width="70dp"
        />
    <Button
        android:id="@+id/button_titik"
        android:text="."
        android:onClick="onButtonNumberClick"
        android:background="@drawable/buttonstyle"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        android:layout_width="70dp" />

    <Button
        android:id="@+id/button_samadengan"
        android:text="="
        android:onClick="onButtonSamaDenganClick"
        android:layout_weight="50"
        android:background="@drawable/buttonstyle3"
        style="@style/ButtonStyle"
        android:layout_margin="10dp"
        android:layout_marginLeft="100dp" />
    </LinearLayout>

</RelativeLayout>


